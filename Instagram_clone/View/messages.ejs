                            <a href="/direct/<%=a.senderId%>">
                                <div id="user">
                                    <img id="messageImg" src="/users_profile/<%=a.senderImage%>"></img>
                                    <div id="profileName">
                                        <%=a.senderUser%>

                                    </div>
                                    <div id="lastMessage">Nasılsın bro</div>

                                </div>
                            </a>
                            <br>







