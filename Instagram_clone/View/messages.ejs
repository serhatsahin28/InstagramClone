                                    <div id="otherMessageText1" class="otherMessageText1">
                                        <%= a.message %>
                                    </div>
                                    <br>
                                </div>
                                <% } else { %>
                                    <div class="sessionUserMessages" id="sessionUserMessages_<%= index %>">
