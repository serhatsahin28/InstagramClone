<body class="body">
    <%-include("sidebar2")%>

        <div class="content">
            <div id="searchDivNav" class="searchDivNav">
                <div class="modal-body row">
                    <p class="col-2">Ara:</p>
                    <form class="col-6">
                        <input id="inputField" class="form-control col text-light bg-dark" placeholder="Ara.."
